@model IEnumerable<QuizApp.Models.Question>

<h2>Manage Questions</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Question</a>
    <a asp-controller="Quiz" asp-action="Index" class="btn btn-success">Take Quiz</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Question</th>
            <th>Correct Option</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.QuestionText</td>
                <td>Option @item.CorrectOption</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>